<!DOCTYPE html>
<html>
  <head>
    <title>Mailing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-light bg-faded">
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: 'nav-link' %>
      </li>
      <% if current_user %>
      
      <li class="nav-item">
        <%= link_to "Log out", logout_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "New message", new_message_path, class: 'nav-link'  %>
      </li>
      <li class="nav-item">
        <%= link_to "Sent message", sent_messages_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Add friends", users_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= current_user.email %>
      </li>
      
      <% else %>
      <li class="nav-item">
        <%= link_to "Log In" , login_path, class: 'nav-link'  %>
      </li>
      <% end %>
    </ul>   
   </nav>
   <%= flash_messages %>
        

      
    
      
      
    <%= yield %>
  </body>
</html>
